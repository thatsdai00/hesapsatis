# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dbname"

# NextAuth
NEXTAUTH_SECRET="replace-with-secure-secret"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration
SMTP_HOST="smtp.yourdomain.com"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="your-email@yourdomain.com"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="Your Store <no-reply@yourdomain.com>"
SITE_NAME="thatsdai"

# Email Testing
# Set to true to use real SMTP even in development
USE_PRODUCTION_EMAIL="true"
# Set to true to enable extensive email debugging
DEBUG_EMAIL="true"

# Other Settings
NODE_ENV="development" 